script/source = "extends Control
@onready var window_mode_menu = $Settings/VBoxContainer/HBoxContainer2/WindowsModeButton
@onready var res_drop_menu = $Settings/VBoxContainer/HBoxContainer/ResolutionButton

func show_hide(first,second):
	first.show()
	second.hide()

func toggle():
	visible = !visible
	get_tree().paused = visible
# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	res_drop_menu.add_item(\"1024x546\")
	res_drop_menu.add_item(\"1280x720\")
	res_drop_menu.add_item(\"1600x900\")
	res_drop_menu.add_item(\"1920x1080\")
	res_drop_menu.add_item(\"2560x1440\")
	
	window_mode_menu.add_item(\"Window Mode\")
	window_mode_menu.add_item(\"Full-Screen\")
	window_mode_menu.add_item(\"Borderless Full-Screen\")	
	

func _on_button_pressed() -> void:
	toggle()


func _on_button_3_pressed() -> void:
	get_tree().quit() # Replace with function body.


func _on_button_2_pressed() -> void:
	show_hide($Settings,$VBoxContainer) # Replace with function body.



func _on_back_button_pressed() -> void:
	show_hide($VBoxContainer,$Settings) # Replace with function body.


func _on_windows_mode_button_item_selected(index: int) -> void:
	match index:
		0:
			DisplayServer.window_set_mode(DisplayServer.WINDOW_MODE_WINDOWED)
			DisplayServer.window_set_flag(DisplayServer.WINDOW_FLAG_BORDERLESS,false)
		1:
			DisplayServer.window_set_mode(DisplayServer.WINDOW_MODE_FULLSCREEN)
			DisplayServer.window_set_flag(DisplayServer.WINDOW_FLAG_BORDERLESS,false)
		2:
			DisplayServer.window_set_mode(DisplayServer.WINDOW_MODE_FULLSCREEN)
			DisplayServer.window_set_flag(DisplayServer.WINDOW_FLAG_BORDERLESS,true)
			


func _on_resolution_button_item_selected(index: int) -> void:
	match index:
		0: 
			DisplayServer.window_set_size(Vector2i(1024, 546))
		1:
			DisplayServer.window_set_size(Vector2i(1280, 720))
		2:
			DisplayServer.window_set_size(Vector2i(1600, 900))
		3:
			DisplayServer.window_set_size(Vector2i(1920, 1080))
		4:
			DisplayServer.window_set_size(Vector2i(2560, 1440))

